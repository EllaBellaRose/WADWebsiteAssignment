@{
    decimal cartTotal = 0;
}

<div class="cartSummary">

    <h3>Cart Summary</h3>


    @if (Model.Count == 0)

    {

        <p>Shopping Cart Empty.</p>

    }

    else

    {

        @foreach (var item in Model)

        {

            cartTotal += item.OrderQuantity * item.TicketPrice;

            <h4>@item.FestivalName Ticket: @item.TicketType</h4>
            <p>

                @item.OrderQuantity at £@((item.TicketPrice).ToString("0.00")) each = £@((item.OrderQuantity * item.TicketPrice).ToString("0.00"))
            </p>

        }

        <h4>Total £@cartTotal.ToString("0.00")</h4>

        <p><a asp-controller="Home" asp-action="ManageCart">Manage Cart</a></p>
    }
</div>

