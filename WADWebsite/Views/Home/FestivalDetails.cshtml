@{
}
    <form method="post">

        <input type="hidden" value="@Model.FestivalID" id="FestivalID" name="FestivalID" />

        <input type="hidden" value="@Model.FestivalName" id="FestivalName" name="FestivalName" />

        <input type="hidden" value="@Model.TicketType" id="TicketType" name="TicketType" />

        <input type="hidden" value="@Model.TicketPrice" id="TicketPrice" name="TicketPrice" />

        <div>

            <label for="OrderQuantity">Quantity</label>

            <input type="number" id="OrderQuantity" name="OrderQuantity" min="1" max="10" value="1" />

        </div>

        <div>

            <input type="submit" value="Add To Cart" class="cta" />

        </div>

    </form>

    <div class="shoppingCart">
        @await Component.InvokeAsync("ShoppingCart")
    </div>