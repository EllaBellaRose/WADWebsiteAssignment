@{
    ViewData["Title"] = "Search Results";
}

<h2>Search For Festival</h2>

<form asp-controller="Home" asp-action="SearchPage" method="get">
    <p>
        Festival Name: <input type="text" name="searchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

@if (Model.Count == 0)
{
    <p>No Festivals found.</p>
}
else
{
    <p>@Model.Count Festivals found.</p>


    <section class="wrap">
        @foreach (var item in Model)
        {
            <div class="festivalThumb">
                <div>
                    <a asp-controller="Home" asp-action="OneFestival" asp-route-ID=@item.FestivalID>
                        <img src="~/images/@item.FestivalImage" height="200" width="200" />
                    </a>
                    <h3>@item.FestivalName</h3>
                    <h4>@item.TicketType</h4>
                    <h4>£@item.TicketPrice</h4>
                </div>
            </div>
        }
    </section>

}
